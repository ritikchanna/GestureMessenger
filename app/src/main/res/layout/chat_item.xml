<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/leftMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:background="#55F2"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/leftMsgPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:background="#0000"
            android:src="@drawable/ic_send" />

        <TextView
            android:id="@+id/leftMsgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/leftMsgPicture" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="#55f2"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/rightMsgPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:background="#0000"
            android:src="@drawable/ic_send" />

        <TextView
            android:id="@+id/rightMsgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/rightMsgPicture" />
    </RelativeLayout>

</RelativeLayout>